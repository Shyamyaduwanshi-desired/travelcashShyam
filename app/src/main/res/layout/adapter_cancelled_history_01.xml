<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/margin_5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        card_view:cardCornerRadius="@dimen/margin_5"
        card_view:cardElevation="@dimen/margin_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            >

             <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_marginTop="@dimen/margin_10"
           >

<TextView
    android:id="@+id/tv_date"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="data,time"

    android:textColor="@android:color/black"
    android:textSize="@dimen/text_size_normal"
    android:layout_toLeftOf="@+id/tv_amount"

    />
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal"

                />

        </RelativeLayout>
             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                 android:paddingBottom="@dimen/margin_10"
                 >

                <TextView
                    android:id="@+id/tv_agent_nm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Agent name"
android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_toLeftOf="@+id/tv_status"

                    />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/cancel_colo"
                    android:textSize="@dimen/text_size_normal"


                    />


            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>