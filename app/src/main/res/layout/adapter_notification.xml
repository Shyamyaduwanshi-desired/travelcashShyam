<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardBackgroundColor="@color/white"
        android:layout_centerInParent="true"
        app:cardElevation="3dp"
        app:cardMaxElevation="@dimen/margin_5"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_pic"
                    android:layout_width="@dimen/margin_70"
                    android:layout_height="@dimen/margin_70"
                    android:src="@drawable/persion"
                    app:civ_border_color="@color/select_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_pic"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:gravity="center"

                    android:paddingLeft="@dimen/margin_5"
                    >
                    <!--android:layout_centerVertical="true"-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_5"
                        >
                  <view.customview.CustomTextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/tv_time"
                                />
                        <view.customview.CustomTextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time"
                            android:textColor="@color/noti_time_colo"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/margin_5"
                            />
                    </RelativeLayout>

                    <view.customview.CustomTextView
                        android:id="@+id/tv_msg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
android:padding="@dimen/margin_5"
                        android:text="msg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"
                        />




   <!-- android:visibility="gone"-->
</LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>